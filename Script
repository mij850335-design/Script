<body>
  <h1>Copie o Script</h1>
  <div class="script-box" id="scriptText">
    loadstring(game:HttpGet("https://pastefy.app/TyjUKSW0/raw"))()
  </div>
  <br>
  <button onclick="copyScript()">Copiar</button>
  <p id="msg" style="color: green; margin-top: 15px;"></p>

  <script>
    function copyScript() {
      const script = document.getElementById('scriptText').innerText;
      navigator.clipboard.writeText(script).then(function() {
        const msg = document.getElementById('msg');
        msg.textContent = "Script copiado com sucesso!";
        setTimeout(() => { msg.textContent = ""; }, 2000);
      }, function() {
        alert('Erro ao copiar o script.');
      });
    }
  </script>
</body>
